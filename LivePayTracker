
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Live Pay Tracker</title>
  <style>
    body {
      font-family: Helvetica, sans-serif;
      max-width: 500px;
      margin: 40px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 8px;
      background-color: #f9f9f9;
    }
    input, button {
      font-size: 16px;
      padding: 8px;
      margin-top: 8px;
      width: 100%;
    }
    .hidden {
      display: none;
    }
    .label {
      margin-top: 16px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Live Pay Tracker</h1>

  <div id="input-form">
    <label class="label">Enter your hourly wage ($):</label>
    <input type="number" id="wageInput" />

    <label class="label">Enter goal amount ($):</label>
    <input type="number" id="goalInput" />

    <button onclick="startTracking()">Start Tracking</button>
  </div>

  <div id="tracker" class="hidden">
    <p id="wageDisplay"></p>
    <p id="timeLabel"></p>
    <p id="moneyLabel"></p>
    <p id="goalTimeLabel" style="color: gray;"></p>

    <button onclick="togglePause()" id="pauseBtn">Pause</button>
    <button onclick="restartTimer()">Restart Timer</button>
    <button onclick="newSession()">New Session</button>
  </div>

  <script>
    let startTime = null;
    let pausedStartTime = null;
    let wagePerSecond = null;
    let paused = false;
    let interval = null;

    function formatTime(seconds) {
      const years = Math.floor(seconds / (365 * 24 * 3600));
      seconds %= (365 * 24 * 3600);
      const days = Math.floor(seconds / (24 * 3600));
      seconds %= 24 * 3600;
      const hrs = Math.floor(seconds / 3600);
      const mins = Math.floor((seconds % 3600) / 60);
      const secs = Math.floor(seconds % 60);

      const parts = [];
      if (years > 0) parts.push(`${years} year${years !== 1 ? 's' : ''}`);
      if (days > 0) parts.push(`${days} day${days !== 1 ? 's' : ''}`);
      if (hrs > 0) parts.push(`${hrs} hour${hrs !== 1 ? 's' : ''}`);
      if (mins > 0) parts.push(`${mins} minute${mins !== 1 ? 's' : ''}`);
      parts.push(`${secs} second${secs !== 1 ? 's' : ''}`);

      return parts.join(", ");
    }

    function update() {
      if (startTime && !paused) {
        const elapsed = (Date.now() - startTime) / 1000;
        const earned = elapsed * wagePerSecond;
        document.getElementById("timeLabel").innerText = `Time Worked: ${formatTime(elapsed)}`;
        document.getElementById("moneyLabel").innerText = `Money Earned: $${earned.toFixed(2)}`;
      }

      const goalAmount = parseFloat(document.getElementById("goalInput").value);
      if (!isNaN(goalAmount) && wagePerSecond) {
        const secondsNeeded = goalAmount / wagePerSecond;
        document.getElementById("goalTimeLabel").innerText = `Time needed to make $${goalAmount.toFixed(2)}: ${formatTime(secondsNeeded)}`;
      }
    }

    function startTracking() {
      const wage = parseFloat(document.getElementById("wageInput").value);
      if (isNaN(wage) || wage <= 0) {
        alert("Please enter a valid hourly wage.");
        return;
      }
      wagePerSecond = wage / 3600;
      startTime = Date.now();
      paused = false;

      document.getElementById("wageDisplay").innerText = `Tracking at $${wage.toFixed(2)} per hour`;
      document.getElementById("input-form").classList.add("hidden");
      document.getElementById("tracker").classList.remove("hidden");

      clearInterval(interval);
      interval = setInterval(update, 1000);
    }

    function togglePause() {
      const pauseBtn = document.getElementById("pauseBtn");
      if (!paused) {
        paused = true;
        pausedStartTime = Date.now();
        pauseBtn.innerText = "Resume";
      } else {
        const pausedDuration = Date.now() - pausedStartTime;
        startTime += pausedDuration;
        paused = false;
        pauseBtn.innerText = "Pause";
      }
    }

    function restartTimer() {
      startTime = Date.now();
      paused = false;
      document.getElementById("pauseBtn").innerText = "Pause";
    }

    function newSession() {
      clearInterval(interval);
      startTime = null;
      wagePerSecond = null;
      paused = false;
      document.getElementById("pauseBtn").innerText = "Pause";

      document.getElementById("wageInput").value = "";
      document.getElementById("goalInput").value = "";
      document.getElementById("timeLabel").innerText = "";
      document.getElementById("moneyLabel").innerText = "";
      document.getElementById("goalTimeLabel").innerText = "";

      document.getElementById("input-form").classList.remove("hidden");
      document.getElementById("tracker").classList.add("hidden");
    }
  </script>
</body>
</html>
